@using tl2_tp8_2025_GastonValla.Web.ViewModels
@model ProductoViewModel

@{
    ViewData["Title"] = "Editar";
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoIndex">Busqueda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoDetail">Catalogo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoCreate">Crear</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoEdit">Editar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoDelete">Eliminar</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="text-center">
    <h1 class="display-4">Editar</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

@if(Model == null)
{
    <form method="post" asp-action="ProductoEdit">
    <label class="mb-1">Ingrese un ID para buscar un producto a editar:</label>
    <input type="number" name="idProd" class="form-control m-1"/>
    <button type="submit" class="btn btn-primary p-1 mt-1">Buscar</button>
    </form>
}
else
{
    <h2>Editar Producto</h2>

    <form  method="post" asp-action="ProductoEditConfirm">
        <label asp-for="IdProducto" class="mb-1" hidden>ID:</label>
        <input asp-for="IdProducto" type="hidden" class="form-control m-1"/>

        <label asp-for="Descripcion">Descripci√≥n:</label>
        <input asp-for="Descripcion" type="text" class="form-control"/>
        <span asp-validation-for="Descripcion" class="text-danger"></span>

        <label asp-for="Precio">Precio:</label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control"/>
        <span asp-validation-for="Precio" class="text-danger"></span>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
}
@section Scripts { <partial name="_ValidationScriptsPartial" /> }

</div>
