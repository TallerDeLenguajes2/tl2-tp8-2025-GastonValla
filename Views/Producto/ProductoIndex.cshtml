@model List<Producto>


@{
    ViewData["Title"] = "Home Page";
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoIndex">Busqueda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoDetail">Catalogo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoCreate">Crear</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoEdit">Editar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ProductoDelete">Eliminar</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="text-center">
    <h1 class="display-4">Buscar productos</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

@if(Model == null)
{
    <form method="post" asp-action="ProductoIndex">
    <label class="mb-1">Ingrese una descripcion para buscar un producto:</label>
    <input type="text" name="desc" class="form-control"/>
    <button type="submit" class="btn btn-primary p-1 mt-1">Buscar</button>
    </form>
}
else
{

    <form method="post" asp-action="ProductoIndex">
    <label class="mb-1">Ingrese una descripcion para buscar un producto:</label>
    <input type="text" name="desc" class="form-control"/>
    <button type="submit" class="btn btn-primary p-1 mt-1">Buscar</button>
    </form>


    <article class="row">
    <p class="col-md-4 fw-bold">ID</p>  
    <p class="col-md-4 fw-bold">Descripcion</p> 
    <p class="col-md-4 fw-bold">Precio</p>
    </article>
    @foreach (Producto  p in Model) 
    {
    <article class="row">
    <p class="col-md-4">@p.IdProducto</p>  
    <p class="col-md-4">@p.Descripcion</p> 
    <p class="col-md-4">@p.Precio</p>
    </article>
    }
}


</div>
