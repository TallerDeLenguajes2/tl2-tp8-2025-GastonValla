@using tl2_tp8_2025_GastonValla.Web.ViewModels
@model Presupuesto

@{
    ViewData["Title"] = "Editar";
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Presupuesto" asp-action="PresupuestoIndex">Busqueda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Presupuesto" asp-action="PresupuestoDetail">Catalogo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Presupuesto" asp-action="PresupuestoCreate">Crear</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Presupuesto" asp-action="PresupuestoEdit">Editar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Presupuesto" asp-action="PresupuestoDelete">Eliminar</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="text-center">
    <h1 class="display-4">Editar</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

@if(Model == null)
{
    <form method="get" asp-action="PresupuestoEdit">
    <label class="mb-1">Ingrese un ID para buscar un presupuesto a editar:</label>
    <input type="number" name="idPres" class="form-control m-1" />
    <button type="submit" class="btn btn-primary p-1 mt-1">Buscar</button>
    </form>
}
else
{
    <h2>Editar Presupuesto</h2>

    <form  method="post" asp-action="PresupuestoEditConfirm">
        <label asp-for="IdPresupuesto" class="mb-1" hidden>ID:</label>
        <input asp-for="IdPresupuesto" type="hidden" class="form-control m-1"/>
        <span asp-validation-for="IdPresupuesto" class="text-danger"></span>

        <label asp-for="NombreDestinatario">Nombre de destinatario:</label>
        <input asp-for="NombreDestinatario" type="text" class="form-control"/>
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>

        <label asp-for="FechaCreacion" hidden>Fecha de creacion:</label>
        <input asp-for="FechaCreacion" type="hidden" class="form-control"/>
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>

    <h3>Productos a√±adidos:</h3>

    <table>
        <thead>
            <th>ID</th>
            <th>Descripcion</th>
            <th>Precio</th>
        </thead>
        <tbody>
        @foreach (PresupuestoDetalle p in Model.Detalle)
        {
            <tr>
                <td>@p.MiProducto.IdProducto</td>
                <td>@p.MiProducto.Descripcion</td>
                <td>@p.MiProducto.Precio</td>
                <td>@p.Cantidad</td>
            </tr>
        }
            <tr>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>Monto total: @Model.MontoPresupuesto()</td>
                <td>Cantidad de productos: @Model.CantidadProductos()</td>
            </tr>
        </tfoot>
    </table>

        <div class="mt-3">
        <a asp-action="AgregarProducto" asp-route-id="@Model.IdPresupuesto">Agregar productos:</a>
        </div>

}

</div>
